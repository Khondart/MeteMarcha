@{
    ViewData["Title"] = "Mete Marcha";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metemarcha - Oficina de Automóveis</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #A3E2FF; /* Fundo principal */
            color: #003F5C; /* Texto padrão */
        }

        .text-center {
            text-align: center;
            padding: 20px;
        }

        h1 {
            color: #003F5C; /* Cor do título */
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        h3 {
            color: #003F5C; /* Cor do subtítulo */
            font-size: 1.8rem;
            margin-bottom: 20px;
        }

        .description {
            font-size: 1.2rem;
            color: #003F5C;
            margin: 0 auto;
            width: 80%;
            line-height: 1.6;
        }

        section {
            padding: 40px 20px;
            background-color: #FFFFFF;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <header class="text-center">
        <h1>Metemarcha</h1>
        <h3>Oficina de Automóveis</h3>
    </header>

    <section class="text-center">
        <div class="description">
            <p>
                Bem-vindo à Metemarcha!
            </p>
        </div>
    </section>

</body>
</html>
