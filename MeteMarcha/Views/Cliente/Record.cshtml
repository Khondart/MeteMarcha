@using MeteMarcha.Models.Clientes
@model ClienteModel

<div>
    <h3>Cliente</h3>
    <form asp-controller="Cliente" asp-action="Save" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="nome" class="form-control"
                   asp-for="Nome" />
        </div>
        <div class="form-group">
            <label>Situação</label>
            <select class="form-select" id="situacao" asp-for="Situacao">
                <option value="10">Ativo</option>
                <option value="20">Desativado</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary float-end m-1">Salvar</button>
        <a type="button" class=" btn btn float-end m-1" asp-controller="Cliente" asp-action="Index">Voltar</a>
    </form>
</div>